<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HomePage</title>
  </head>
  <body>
    <nav>
      <a href="/">HomePage</a>
      <a href="/logout">Log Out</a>
    </nav><br>

    <div>
      <h1>Eleven Bottles</h1>
    </div><br>

    <table border="2">
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Stock</th>
      </tr>
      <% data.forEach(product => { %>
      <tr>
        <td><a href="/user/<%= userId %>/product/<%= product.id %>"><%= product.name %></a></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
      </tr>
      <% }) %>
    </table><br><br>

    <table border="2">
      <tr>
        <th>Order Number</th>
        <th>Shipping Address</th>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Total Price</th>
        <th>Status</th>
        <th>Order Date</th>
      </tr>
      <% data.forEach(data => { %>
      <tr>
        <td><%= data.Order.id %></td>
        <td><%= data.Order.shippingAddress %></td>
        <td><%= data.name %></td>
        <td><%= data.Order.quantity %></td>
        <td><%= data.Order.totalPrice %></td>
        <td><%= data.Order.status %></td>
        <td><%= data.Order.orderDate %></td>
      </tr>
      <% }) %>
    </table><br><br>
  </body>
</html>
